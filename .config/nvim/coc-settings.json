{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json"
  ],
  "languageserver": {
    "dls": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio", "--log-level", "2"],
      "filetypes": ["php"],
      "initializationOptions": {
        "linters": {
          "phpcs": {
            "command": "./vendor/bin/phpcs",
            "debounce": 100,
            "rootPatterns": ["composer.json", "composer.lock", "vendor", ".git"],
            "args": ["--standard=PSR2", "--report=emacs", "-s", "-"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "phpcs",
            "formatLines": 1,
            "formatPattern": [
              "^.*:(\\d+):(\\d+):\\s+(.*)\\s+-\\s+(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": 4,
                "security": 3
              }
            ],
            "securities": {
              "error": "error",
              "warning": "warning"
            }
          }
        },
        "filetypes": {
          "php": "phpcs"
        }
      }
    }
  },
  "rust-analyzer.serverPath": "/usr/local/bin/rust-analyzer",
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "bracketSpacing": false,
    "trailingComma": "all"
  }
}
