# vim: noexpandtab
[user]
	name = Nathan Knowler
	email = nathan@knowler.me
	signingkey = 3601C896EC39C1E1
[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore
	symlinks = true
	pager = delta
[help]
	autoCorrect = prompt
[init]
	defaultBranch = main
	#templateDir = ~/.local/share/git-core/templates
[pull]
	ff = only
[delta]
	features = side-by-side line-numbers
[interactive]
	diffFilter = delta --color-only
[commit]
	verbose = true
	gpgSign = true
[alias]
	triage = !triage
	restage = !git add $(git diff --name-only --staged)
	unstage = !git restore $(git diff --name-only --staged)
	ls-unmerged = diff --diff-filter=U --name-only
	loot = !loot
	limb = !limb
	litter = !litter
	update = !gitupdate
	history = !git-file-history
	track = !track
[merge]
	tool = nvimdiff
[rebase]
	autoSquash = true
[status]
	showStash = true
[fetch]
	prune = true
[stash]
	showPatch = true
[includeIf "gitdir:~/code/stellar/"]
	path = ~/code/stellar/.gitconfig
[advice]
	addEmptyPathspec = false
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
